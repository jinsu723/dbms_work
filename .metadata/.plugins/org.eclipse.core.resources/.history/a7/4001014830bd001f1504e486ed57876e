CREATE TABLE TBL_STUDENT1(
	STUDENT_NUMBER	NUMBER
  , STUDENT_NAME	VARCHAR2(5)		CONSTRAINT STUDENT_NAME_NN NOT NULL
  , STUDENT_AGE		NUMBER			CONSTRAINT STUDENT_AGE_NN NOT NULL
  , STUDENT_PHONE	VARCHAR2(11)	CONSTRAINT STUDENT_PHONE_NN NOT NULL
  , STUDNET_ADDRESS	VARCHAR2(1000)	CONSTRAINT STUDENT_ADDRESS_NN NOT NULL
  , SCORE_SNUMBER	VARCHAR2(1000)	CONSTRAINT STUDENT_SNUMBER_NN NOT NULL
  , CONSTRAINT STUDENT_NUMBER_PK PRIMARY KEY(STUDENT_NUMBER)
  , CONSTRAINT STUDENT_PHONE_UK  UNIQUE(STUDENT_PHONE)
  , CONSTRAINT SCORE_SNUMBER1_FK  FOREIGN KEY(SCORE_SNUMBER) REFERENCES TBL_SCORE(SCORE_SNUMBER)
);

SELECT 	*
FROM	tbl_student1;
--	TBL_MAJOR
--	======================================
--	MAJOR_MNUMBER(PK)	VARCHAR2(1000)
--	MAJOR_NAME(NN)		VARCHAR2(1000)
--	MAJOR_TEACHER(NN)	VARCHAR2(5)
--	MAJOR_START(NN)		DATE
--	MAJOR_TIME(CK/NN)	VARCHAR2(10)
--	SCORE_SNUMBER(FK/NN)	VARCHAR2(1000)
CREATE TABLE TBL_MAJOR(
	MAJOR_MNUMBER	VARCHAR2(1000)
  , MAJOR_NAME		VARCHAR2(1000)	CONSTRAINT MAJOR_NAME_NN NOT NULL
  , MAJOR_THECHER	VARCHAR2(5)		CONSTRAINT MAJOR_TEACHER_NN NOT NULL
  , MAJOR_START		DATE			CONSTRAINT MAJOR_START_NN NOT NULL
  , MAJOR_TIME		VARCHAR2(10)	CONSTRAINT MAJOR_TIME_NN NOT NULL CHECK(MAJOR_TIME = '오전 9시'
  																		 OR MAJOR_TIME = '오후 19시')
  , SCORE_SNUMBER	VARCHAR2(1000)	CONSTRAINT MAJOR_SNUMBER_NN NOT NULL
  , CONSTRAINT MAJOR_MNUMBER_PK PRIMARY KEY(MAJOR_MNUMBER)
  , CONSTRAINT SCORE_SNUMBER_FK FOREIGN KEY(SCORE_SNUMBER) REFERENCES TBL_SCORE(SCORE_SNUMBER)
);

SELECT 	*
FROM	tbl_major;
--	TBL_SCORE
--	======================================
--	SCORE_SNUMBER(PK)	VARCHAR2(1000)
--	SCORE_GRADE(NN)		CHAR(1)
CREATE TABLE TBL_SCORE(
	SCORE_SNUMBER	VARCHAR2(1000)
  , SCORE_GRADE		CHAR(1)	CONSTRAINT SCORE_GRADE_NN NOT NULL CHECK(SCORE_GRADE = 'A'
  																  OR SCORE_GRADE = 'B'
  																  OR SCORE_GRADE = 'C'
  																  OR SCORE_GRADE = 'F')
  , STUDENT_NUMBER	VARCHAR(1000)
  , MAJOR_MNUMBER	VARCHAR(1000)
  , CONSTRAINT SCORE_PK PRIMARY KEY(SCORE_SNUMBER, STUDENT_NUMBER, MAJOR_MNUMBER)
);

SELECT	*
FROM 	tbl_score;